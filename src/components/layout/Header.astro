---
import Button from "../ui/Button.astro";
import Icon from "../ui/Icon.astro";

const navigation = [
  { name: "Inicio", href: "/" },
  { name: "Servicios", href: "/servicios" },
  { name: "Nosotros", href: "/nosotros" },
  { name: "Contacto", href: "/contacto" },
];
---

<header
  class="bg-white/95 backdrop-blur-sm border-b border-gray-100 sticky top-0 z-50"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div
            class="w-8 h-8 bg-gradient-to-br from-primary to-primary-light rounded-lg flex items-center justify-center"
          >
            <span class="text-white font-bold text-sm">RT</span>
          </div>
          <span class="text-xl font-bold text-gray-900">Rubin Tech</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8">
        {
          navigation.map((item) => (
            <a
              href={item.href}
              class="text-gray-700 hover:text-primary font-medium transition-colors duration-200"
            >
              {item.name}
            </a>
          ))
        }
      </nav>

      <!-- Desktop CTA -->
      <div class="hidden lg:flex items-center space-x-4">
        <Button variant="secondary" size="sm"> Obtener Cotización </Button>
        <Button variant="primary" size="sm"> Comienza Hoy </Button>
      </div>

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button
          id="mobile-menu-button"
          class="p-2 rounded-lg text-gray-700 hover:text-primary hover:bg-gray-100 transition-colors duration-200"
          aria-label="Abrir menú"
        >
          <Icon name="menu" size="md" />
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="lg:hidden hidden border-t border-gray-100 py-4"
    >
      <nav class="flex flex-col space-y-4">
        {
          navigation.map((item) => (
            <a
              href={item.href}
              class="text-gray-700 hover:text-primary font-medium py-2 transition-colors duration-200"
            >
              {item.name}
            </a>
          ))
        }
        <div class="flex flex-col space-y-3 pt-4 border-t border-gray-100">
          <Button variant="secondary" size="sm"> Obtener Cotización </Button>
          <Button variant="primary" size="sm"> Comienza Hoy </Button>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
